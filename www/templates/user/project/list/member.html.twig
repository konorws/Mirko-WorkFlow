{% extends '@App/user/project/structure/project.html.twig' %}

{% block head__title %}
    {% trans %}Project Member{% endtrans %}
{% endblock %}

{% block project_content %}

    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>{% trans %}Projects{% endtrans %} <small>{% trans %}List{% endtrans %}</small></h3>
            </div>

            <div class="title_right">
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_content">
                        <table class="table table-striped projects">
                            <thead>
                            <tr>
                                <th style="width: 100px">Image</th>
                                <th style="width: 20%">Name</th>
                                <th>Role</th>
                                <th>Task Progress</th>
                                <th style="width: 20%">#Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for member in members %}
                                <tr>
                                    <td>
                                        <img src="{{ attachmentThumb(member.user.image) }}"
                                             class="img-responsive img-thumbnail"
                                             style="width: 100px"
                                        />
                                    </td>
                                    <td>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
